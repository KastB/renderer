<project name="jtile" default="dist" basedir=".">
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="jarfile" location="./jtile.jar"/>
  <property name="batik.dir" value="/usr/share/java//"/>
  <path id="classpath">
    <fileset dir="${batik.dir}" includes="**/batik*.jar"/>
    <fileset dir="${batik.dir}" includes="**/xml-apis-ext.jar"/>
    <fileset dir="${batik.dir}" includes="**/xmlgraphics*.jar"/>
    

  </path>
            
  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="compile the source " >
    <javac includeantruntime="false" srcdir="${src}" destdir="${build}" classpathref="classpath" encoding="UTF-8" />
  </target>

  <target name="dist" depends="compile" description="generate the distribution" >
    <jar jarfile="${jarfile}" basedir="${build}" >
      <manifest>
        <attribute name="Main-Class" value="jtile.Jtile"/>
        <attribute name="Class-Path" value="$jarfile"/>
      </manifest>
      <zipgroupfileset dir="${batik.dir}" includes="**/batik-*.jar" />
      <zipgroupfileset dir="${batik.dir}" includes="**/xml-apis-ext.jar"/>
      <zipgroupfileset dir="${batik.dir}" includes="**/xmlgraphics*.jar"/>
    </jar>
  </target>

  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
    <delete file="${jarfile}"/>
  </target>
</project>
